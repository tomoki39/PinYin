<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PinYin" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/md_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/md_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/md_surface</item>
        <!-- Text colors for light mode -->
        <item name="android:textColorPrimary">@color/md_on_surface</item>
        <item name="android:textColorSecondary">@color/md_on_surface_variant</item>
        <!-- Material Design 3 color attributes -->
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorSurfaceVariant">@color/md_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md_on_surface_variant</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/md_surface</item>
        <!-- System bar icons -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Hide ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="actionBarStyle">@android:style/Widget.Holo.Light.ActionBar</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.Light.ActionBar</item>
    </style>
</resources> 